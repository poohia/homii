{% extends "base/base.twig" %}

{% block body %}
<h1>Pannier</h1>

{% if kits.length == 0 %}
<p>Vous n'avez pas de produits</p>
{% else %}
 {% set total = 0 %}
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>Kit</th>
            <th>Prix</th>
            <th>Quantit√©e</th>
            <th></th>
        </tr>
    </thead>
    <tbody>  
        {% for kit in  kits %}
        {% set total = (total + kit.price) * kit.count %}
        <tr>
        <td><img src="{{ kit.image }}" alt="{{ kit.name }}" style="width: 50px; height: 50px;"></td>
        <td><a href="/market/show/kit/{{kit._id}}" target="_blank" >{{kit.name}}</a></td>
        <td>{{kit.price}} EUROS </td>
        <td>{{kit.count}}</td>
        <td><button class="btn btn-danger remove-cart" data-href="/cart/remove/{{kit._id}}">Supprimer</button></td>
        </tr>
        {% endfor %}
    </tbody>
    
</table>
<p>Total : {{ total }} </p>
<a class="btn btn-primary" href="/order">Passer la commande</a>
{% endif %}


{% endblock %}


{% block javascript %}
    {{ parent() }}
 {#  <script src="/js/cart.module.js" type="text/javascript" ></script> #}
 <script src="/js/cart.module.js" type="text/javascript" ></script> 
{% endblock javascript %}