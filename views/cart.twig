{% extends "base/base_home.twig" %}


    {% block header %}
    	{% include "base/home_header_black.twig" %}
    {% endblock %}
    
{% block main %}
<section class="container-fluid">
<h2>Pannier</h2>

{% if kits.length == 0 %}
<p>Vous n'avez pas de produits</p>
{% else %}
 {% set total = 0 %}
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>Produit</th>
            <th>Prix</th>
            <th>Quantit√©e</th>
            <th></th>
        </tr>
    </thead>
    <tbody>  
    {% set total = 0 %}
        {% for kit in  kits %}
        {% set  total = total + (kit.price * kit.count) %}
        <tr>
        <td><img src="{{ kit.image }}" alt="{{ kit.name }}" style="width: 50px; height: 50px;"></td>
        <td>{{kit.name}}</td>
        <td>{{kit.price}} EUROS </td>
        <td>{{kit.count}}</td>
        <td><a class="btn btn-danger remove-cart" href="/cart/remove/{{kit._id}}">Supprimer</a></td>
        </tr>
        {% endfor %}
    </tbody>
    
</table>
<p>Total : {{ total }} EUROS</p>
<p>Total TTC : {{ total + (0.7 * kits.length)}} EUROS</p>
<a class="btn btn-primary" href="/order">Passer la commande</a>
{% endif %}
</section>

{% endblock %}


{% block javascript %}
 {#  <script src="/js/cart.module.js" type="text/javascript" ></script> #}
 <script src="/js/cart.module.js" type="text/javascript" ></script> 
{% endblock javascript %}