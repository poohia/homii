{% extends "base/base.twig" %}

{% block body %}
<h1>{{ data.kit.name }}</h1>
 {% if isAdmin  == false %} <button class="btn btn-danger add-cart" data-href="/cart/add/{{data.kit._id}}">Ajouter panier</button> {% endif %}
  <img src="{{data.kit.image}}" alt="{{ 'Image du '~data.kit.name|lower}}" >
<p>Prix :  {{data.kit.price}}</p>
<p>{{ data.kit.description }}</p>
<h3>Produits :</h3> 
<table class="table">
    <tbody>
        {% for product in data.products %}
        <tr>
        <td>  <img src="{{product.image}}" alt="{{ product.name}}" style="width: 50px; height : 50px;" ></td>
        <td>{{ product.name}}</td>
        <td>{{product.description}}</td>
        <td>
            <a href="/market/show/product/{{product._id}}" class="btn btn-primary">Voir</a>
        
        </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{{ req.user }}
{% endblock body %}

{% block javascript %}
    {{ parent() }}
   <script src="/js/cart.module.js" type="text/javascript" ></script> 
{% endblock javascript %}

