{% extends "base/base_home.twig" %}

{% block stylesheet %}
     <link rel="stylesheet" href="/css/style_home_blog.min.css">
{% endblock stylesheet %}

{% block main %}

    <section id="blog">

        <div class="row search-row">
            <h1 class="white title-blog">Bienvenue sur <br>sur le blog Homii</h1>
            
        </div>

        <div class="container">

            <div class="row">
                <h1>Les dernières actus</h1>
            </div>

            <div id="myCarousel" class="carousel slide" data-ride="false" data-interval="false">

                <div class="row row-slide carousel-inner">
                    {% for  recentPost in recentPosts %}
                      {% if loop.index0 % 4 == 0 %}
                      <div class="item {% if loop.index0 == 0 %} active {% endif %}">
                      {% endif %}
                          <article class="col-md-3 article">
                            <img class="img-responsive" src="{{recentPost.image}}" alt="{{recentPost.name}}">
                            <div class="art-txt">
                                <h3><a href="/blog/{{recentPost.slug}}">{{recentPost.titre_1}}</a></h3>
                                <p>{{recentPost.preview}}</p>
                            </div> 
                            <a class="detail" href="/blog/{{recentPost.slug}}"><span class="glyphicon glyphicon-chevron-right"></span>Détail</a>  
                        </article>
                      {% if loop.index % 4 == 0 and loop.index != 0  %}
                          </div>
                      {% endif %}
                    {% endfor %}
                    

                    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                      </a>
                    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>

                </div>

            </div>

            <div class="row">
                <h1>Les plus vues</h1>
            </div>

            <div id="myCarousel2" class="carousel slide" data-ride="false" data-interval="false">

                <div class="row row-slide carousel-inner">
                    {% for  vuePost in vuePosts %}
                      {% if loop.index0 % 4 == 0 %}
                      <div class="item {% if loop.index0 == 0 %} active {% endif %}">
                      {% endif %}
                          <article class="col-md-3 article">
                            <img class="img-responsive" src="{{vuePost.image}}" alt="{{vuePost.name}}">
                            <div class="art-txt">
                                <h3><a href="/blog/{{vuePost.slug}}">{{vuePost.titre_1}}</a></h3>
                                <p>{{vuePost.preview}}</p>
                            </div> 
                            <a class="detail" href="/blog/{{vuePost.slug}}"><span class="glyphicon glyphicon-chevron-right"></span>Détail</a>  
                        </article>
                      {% if loop.index % 4 == 0 and loop.index != 0  %}
                          </div>
                      {% endif %}
                    {% endfor %}

                    <a class="left carousel-control" href="#myCarousel2" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                      </a>
                    <a class="right carousel-control" href="#myCarousel2" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>

                </div>

            </div>

        </div>

{% endblock %}

    {% block javascript %}
     {{ parent() }}

 
    {% endblock javascript %}