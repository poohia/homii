<div class="col-sm-4 col-sm-offset-1">
    <form id="" action="/login" method="POST" >
    	<h3>Vous avez déjà un compte ?</h3>
    	{% if connexionEchec.length > 0 %}
    	<div class="alert alert-danger" role="alert"><button type="button" class="close" data-dismiss="alert" aria-label="Close">
  <span aria-hidden="true">&times;</span></button>{{ connexionEchec }}
</div>
    	{% endif %}
    	<input placeholder="mail" id="email-login" name="email" type="email" required>
    	<input placeholder="mot de passe *"  id="password-login" name="password" type="password" required >
    	<input type="hidden" name="lastUrl" value="/order">
    	<p>
          <label for="remember">Se souvenir de moi </label>
          <input type="checkbox" id="remember" name="remember"/>
         
        </p>
        
    	<input type="hidden" name="token" />
    	<button type="submit" class="btn send">se connecter</button>
	</form>
</div>