<form id="form_signup" action="/signup" method="POST" >
    
    <div class="form-group">
        <label for="signup_email" autofocus>Email* : </label>
        <input id="signup_email" name="email" type="email" class="form-control"  />
    </div>
    <div class="form-group">
        <label for="signup_password">Mot de passe* <sup>1</sup> : </label>
        <input id="signup_password" name="password" type="password" class="form-control"  />
    </div>
    <div class="form-group">
        <label for="password_again">Confirmer mot de passe* <sup>1</sup> : </label>
        <input id="password_again" type="password" class="form-control" />
    </div>
    <div class="form-group">
        <label for="name" >Nom* : </label>
        <input type="text" id="name" name="name" autocomplete="off" class="form-control" />
    </div>
    <input type="hidden" name="token" />
     <button type="submit" class="website">Inscription</button>
</form>